{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 450,
  "title": "The number of Association of Tennis Professional final match wins and overall match win rate of each country",
  "projection": {"type": "equirectangular"},
  "params": [
      {"name": "year_selection",
      "value": 2020,
      "bind": {
          "input": "range",
          "min": 1969,
          "max": 2021,
          "step": 1,
          "name": "Year: "
      }}
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mleo0010/FIT3179-DataVis2-ML/main/json/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#e0f5ff"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mleo0010/FIT3179-DataVis2-ML/main/json/graticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#dad9d9"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mleo0010/FIT3179-DataVis2-ML/main/json/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#fff6e0", "stroke": "#c4c3c3"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mleo0010/FIT3179-DataVis2-ML/main/data/country_wins_years_data.csv"
      },
      "transform": [{"filter": {"not": {"field": "latitude", "equal": "NA"}}},
      {"filter": "datum.year == year_selection"}],
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "tooltip": [
          {"field": "country_name", "type": "nominal", "title": "Country"},
          {
            "field": "wins",
            "type": "quantitative",
            "title": "No. of ATP finals wins"
          },
          {
            "field": "win_rate",
            "type": "quantitative",
            "title": "Overall win rate (%)",
            "format": ".2f"
          }
        ],
        "size": {
          "field": "wins",
          "type": "quantitative",
          "title": "Association of Tennis Professional finals wins",
          "scale": {"domain": [-1, 5]},
          "legend": {"titleLimit": 56}
        },
        "color": {
          "field": "win_rate",
          "type": "quantitative",
          "title": "Win rate of all matches (%)",
          "scale": {"domain": [40, 60], "scheme": "redblue"}
        },
        "fillOpacity": {"value": 1}
      }
    }
  ],
  "config": {}
}
