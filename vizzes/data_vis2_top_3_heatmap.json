{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 300,
  "width": 300,
  "title": {
    "text": "How many times have the Big 3 won matches against each other?",
    "fontSize": 16
  },
  "data": {
    "url": "https://raw.githubusercontent.com/mleo0010/FIT3179-DataVis2-ML/main/data/top3_players_heatmap_data.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "winner_name",
        "oneOf": [
          "Rafael Nadal",
          "Roger Federer",
          "Novak Djokovic",
          "Jimmy Connors",
          "Ivan Lendl"
        ]
      }
    },
    {
      "filter": {
        "field": "loser_name",
        "oneOf": [
          "Rafael Nadal",
          "Roger Federer",
          "Novak Djokovic",
          "Jimmy Connors",
          "Ivan Lendl"
        ]
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "winner_name",
      "type": "nominal",
      "axis": {"labelFontSize": 12, "titleFontSize": 14},
      "title": "Winner"
    },
    "y": {
      "field": "loser_name",
      "type": "nominal",
      "axis": {"labelFontSize": 12, "titleFontSize": 14},
      "title": "Runner Up"
    }
  },
  "layer": [
    {
      "mark": "rect",
      "encoding": {
        "color": {
          "field": "n",
          "type": "quantitative",
          "title": "Matches",
          "legend": {"titleFontSize": 14, "labelFontSize": 12}
        },
        "tooltip": [
          {"field": "winner_name", "type": "nominal", "title": "Winner"},
          {"field": "loser_name", "type": "nominal", "title": "Runner Up"},
          {
            "field": "n",
            "type": "quantitative",
            "title": "Matches won by the winner against the runnerup"
          }
        ]
      }
    },
    {
      "mark": {"type": "text", "fontSize": 12},
      "encoding": {
        "text": {"field": "n", "type": "quantitative"},
        "color": {
          "condition": {"test": "datum['n'] >= 20", "value": "white"},
          "value": "black"
        }
      }
    }
  ],
  "config": {"axis": {"grid": true, "tickBand": "extent"}}
}