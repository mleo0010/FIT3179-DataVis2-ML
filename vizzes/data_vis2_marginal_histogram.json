{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mleo0010/FIT3179-DataVis2-ML/main/data/finals_tennis_data_complete.csv"
  },
  "spacing": 15,
  "bounds": "flush",
  "vconcat": [
    {
      "mark": "bar",
      "height": 100,
      "width": 250,
      "encoding": {
        "x": {"bin": true, "field": "winner_age", "axis": null},
        "y": {
          "aggregate": "count",
          "scale": {"domain": [0, 2000]},
          "title": ""
        },
        "tooltip": [
          {"field": "winner_age", "bin": true, "title": "Age range"},
          {"aggregate": "count", "type": "quantitative", "title": "Number of people who fall in this age range"}
        ]
      }
    },
    {
      "spacing": 15,
      "bounds": "flush",
      "hconcat": [
        {
          "height": 250,
          "width": 250,
          "mark": "rect",
          "encoding": {
            "x": {"bin": true, "field": "winner_age", "title": "Age"},
            "y": {"bin": true, "field": "winner_ht", "title": "Height (cm)"},
            "color": {"aggregate": "count", "legend": {"title": ["Number of people", "within the age", "and height ranges"]}},
            "tooltip": [
              {"field": "winner_age", "bin": true, "title": "Age range"},
              {"field": "winner_ht", "bin":true, "title": "Height range (cm)"},
              {"aggregate": "count", "type": "quantitative", "title": "Number of people who fall within both ranges"}
            ]
          }
        },
        {
          "mark": "bar",
          "width": 100,
          "height": 250,
          "encoding": {
            "y": {"bin": true, "field": "winner_ht", "axis": null},
            "x": {
              "aggregate": "count",
              "scale": {"domain": [0, 1500]},
              "title": ""
            },
            "tooltip": [
              {"field": "winner_ht", "bin":true, "title": "Height range (cm)"},
              {"aggregate": "count", "type": "quantitative", "title": "Number of people who fall in this height range"}
            ]
          }
        }
      ]
    }
  ],
  "config": {"view": {"stroke": "transparent"}}
}
